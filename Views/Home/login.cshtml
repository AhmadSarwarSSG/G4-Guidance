@model G4_Guidance.Models.User_Data;
@{
    ViewData["Title"] = "Login";
}
<div class="card" id="login">
    <form action="/home/login" method="post">
        <h1 class="card-header text-center">Login</h1>
        <div class="card-body">
            <div class="form-floating mb-3">
                <input asp-for="username" id="user" class="form-control" type="text" placeholder="Joe Doe" required>
                <label asp-for="username">Username</label>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="password" type="password" class="form-control" placeholder="Enter Password" required>
                <label asp-for="password">Password</label>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-dark">Login</button>
            </div>
        </div>
    </form>
</div>
