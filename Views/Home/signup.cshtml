@model G4_Guidance.Models.signup;
@{
    ViewData["Title"] = "Sign Up";
}
<div class="card" id="signup">
    <form asp-action="signup" method="post">
        <h1 class="card-header text-center">Sign Up</h1>
        <div class="card-body">
            <div class="form-floating mb-3">
                <input asp-for="username" class="form-control" type="text" placeholder="Joe Doe">
                <label asp-for="username">Username</label>
                <p style="color:red;">@Html.ValidationMessage("username")</p>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="email" class="form-control" type="text" placeholder="jeo@gmail.com">
                <label asp-for="email">Email</label>
                <p style="color:red;">@Html.ValidationMessage("email")</p>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="password" type="password" class="form-control" placeholder="Enter Password">
                <label asp-for="password">Password</label>
                <p style="color:red;">@Html.ValidationMessage("password")</p>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-dark">Sign Up</button>
            </div>
        </div>
    </form>
</div>
